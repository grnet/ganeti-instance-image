# Remove all generated keys so that each instance has unique keys for ssh

set -e
. ./common.sh
debug set -x

HOST_KEY='/etc/ssh/ssh_host_key'
RSA_KEY='/etc/ssh/ssh_host_rsa_key'
DSA_KEY='/etc/ssh/ssh_host_dsa_key'

if test -e "${TARGET}/etc/debian_version"; then
    log_error 'Debian/Ubuntu: replace existing ssh keys'
    test -f "${TARGET}/$RSA_KEY" && rm -f "${TARGET}/$RSA_KEY"* && \
        ssh-keygen -t 'rsa' -q -N '' -f "${TARGET}/$RSA_KEY"
    test -f "${TARGET}/$DSA_KEY" && rm -f "${TARGET}/$DSA_KEY"* && \
        ssh-keygen -t 'dsa' -q -N '' -f "${TARGET}/$DSA_KEY"
    exit 0
fi

for _key in "$HOST_KEY" "$RSA_KEY" "$DSA_KEY"; do
    ! test -f "${TARGET}/$_key" || rm -f "${TARGET}/$_key"*
done
