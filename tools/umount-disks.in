set -e

# presets
IMAGE_TYPE=''
IMAGE_DIR=''
IMAGE_NAME=''
ARCH=''
SCRIPT_NAME="$(basename "$0")"
INSTANCE_NAME=''

# functions
run_help() {
    cat <<EOF
Usage: $SCRIPT_NAME INSTANCE_NAME

Unmount the disks of an instance from a temp directory.

ARGS:
 INSTANCE_NAME    Name of the instance
EOF
}

# getopts
while getopts 'h' _opt; do
    case "$_opt" in
        h)
            run_help
            exit 0
            ;;
        *)
            run_help
            exit 1
            ;;
    esac
done
INSTANCE_NAME="$1"

# sanity checks
test -n "$INSTANCE_NAME" || die 'Error: INSTANCE_NAME not set\n'
test -n "$DISK_0_PATH" || die 'Error: DISK_0_PATH not set\n'
test -n "$OS_VARIANT" || die 'Error: OS_VARIANT not set\n'
test -n "$HYPERVISOR" || die 'Error: HYPERVISOR not set\n'
test -n "$DISK_COUNT" || die 'Error: DISK_COUNT not set\n'
test -n "$INSTANCE_HV_kernel_path" || die 'Error: INSTANCE_HV_kernel_path not set\n'
test -n "$OS_API_VERSION" || die 'Error: OS_API_VERSION not set\n'

# source functions
. "@osdir@/@osname@/common.sh"
debug set -x

# main
TARGET="/tmp/${INSTANCE_NAME}_root"
filesystem_dev="${DISK_0_PATH#/dev}"
map_partition 'root'
map_partition 'boot'
umount_disk0 'temp'
BLOCKDEV="$DISK_0_PATH"
unmap_disk0
